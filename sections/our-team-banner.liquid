{% if section.settings.image != blank %}
  <div class="our_team_main_banner">
    <div class="container dt-prl-30">
      <div class="row">
        <div class="col-12 s12 center mt2 mb2">          
          <img class="team_banner" src="{{ section.settings.image | img_url:'2048x' }}" alt="Our Team" />
        </div>
      </div>
    </div>
  </div>
{% endif %} 

{% schema %}
  {
    "name": "Our Team Banner",
    "settings": [
      {
        "type": "header",
        "content": "Main Banner"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }     
    ]
  }
{% endschema %}

