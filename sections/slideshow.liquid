<div class="flexslider heroSlider" id="heroSlider--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="slideshow-section" data-slider-home-auto="{{ section.settings.slider_home_auto }}" data-slider-home-rate="{{ section.settings.slider_home_rate }}">
  <ul class="slides">
    {%- for block in section.blocks -%}
      <li id="slide--{{ block.id }}" data-flexslider-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        {%- if block.settings.slide != blank -%}      
            {%- assign image = block.settings.slide -%}
            {%- capture img_wrapper_id -%}slideShowImageWrapper-{{ section.id }}-{{ image.id }}{%- endcapture -%}
            {%- assign max_width = 1000 -%}
            {%- assign max_height = 1500 -%}
            {%- include 'image-logic' with width: max_width, height: max_height -%}
            {%- assign img_url = image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
            <div id="{{ img_wrapper_id }}" class="lazyload__image-wrapper" data-image-id="{{ image.id }}" {% comment %}style="max-width: {{ max_width }}px"{% endcomment %}>
              <div class="lazyload__image-wrapper no-js" style="padding-top:{{ 1 | divided_by: image.aspect_ratio | times: 100}}%;">
                <img
                  class="js {% if forloop.index > 1%}lazypreload{% endif %}"
                  src="{{ image | img_url: 'master' }}"
                  data-src="{{ img_url }}"
                  data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
                  data-aspectratio="{{ image.aspect_ratio }}"
                  data-sizes="auto"
                  alt="{{ image.alt | escape }}"
                  loading="eager" />
              </div>
            </div>
            <noscript>
              <img src="{{ image | img_url: '580x' }}"
                srcset="{{ image | img_url: '580x' }} 1x, {{ image | img_url: '580x', scale: 2 }} 2x"
                alt="{{ image.alt }}" 
                style="opacity:1;">
            </noscript>
            {%- comment -%}<img src="{{ image | img_url: '1024x' }}"
            srcset="{{ image | img_url: '1024x' }} 1x, {{ image | img_url: '1024x', scale: 2 }} 2x" alt="{{ image.alt }}">{%- endcomment -%}
          <div class="banner__content"> 
             <div class="slide_wrapper">
                {%- if block.settings.title != blank -%}
                    <h2 class="banner_heading" style="color: {{ block.settings.title_color }};">{{ block.settings.title }}</h2>
                {%- endif -%}
                {%- if block.settings.sub_title != blank -%}
                    <p class="banner__sub-heading" style="color: {{ block.settings.sub_title_color }};">{{ block.settings.sub_title }}</p>
                {%- endif -%}
                {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" {% if block.settings.url_new_tab %}target="_blank"{% endif %} class="btn slide-link font-bold" tabindex="-1" style="color: {{ block.settings.btn_text_color }}; background: {{ block.settings.btn_bg_color }};">{{ block.settings.btn_cap }}</a>
                {%- endif -%}    
              </div> 
          </div>
        {%- else -%}
          {%- capture current -%}{% cycle 1, 2 %}{%- endcapture -%}
          {%- capture svg_tag_class -%}placeholder-noblocks slide-link slide-link--{{ block.id }}{%- endcapture -%}
          {%- assign placeholder = 'placeholder-lifestyle-' | append: current -%}
          {{ 'lifestyle-' | append: current | placeholder_svg_tag: svg_tag_class }}
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul> 
</div>

{% schema %}
{
  "name": "Slideshow",
  "class": "slider-section",
  "max_blocks": 10,
  "settings": [
    {
      "type": "checkbox",
      "id": "slider_home_auto",
      "label": "Auto-rotate slides"
    },
    {
      "type": "select",
      "id": "slider_home_rate",
      "label": "Transition time",
      "options": [
        {
          "value": "5000",
          "label": "5 seconds"
        },
        {
          "value": "7000",
          "label": "7 seconds"
        },
        {
          "value": "10000",
          "label": "10 seconds"
        },
        {
          "value": "15000",
          "label": "15 seconds"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "category": "Image",
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide",
          "label": "Image",
          "info": "1000 x 500px recommended"
        },
        {
          "type": "text",
          "id": "title",
          "label":"Heading"
        },
        {
          "type": "color",
          "id": "title_color",
          "label":"Heading color"
        },
		{
          "type": "text",
          "id": "sub_title",
          "label":"Sub heading"
        },
        {
          "type": "color",
          "id": "sub_title_color",
          "label":"Sub heading color"
        },
        {
          "type": "text",
          "id": "btn_cap",
          "label":"Button"
        },
        {
          "type": "url",
          "id": "link",
          "label": "URL"
        },
        {
          "type": "checkbox",
          "id": "url_new_tab",
          "label": "Url open in new tab",
          "default": false
        },
		{
          "type": "color",
          "id": "btn_text_color",
          "label":"Button text color"
        },
		{
          "type": "color",
          "id": "btn_bg_color",
          "label":"Button bg color"
        }
      ]
    }
  ]
}
{% endschema %}
