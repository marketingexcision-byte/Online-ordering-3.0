<div class="container dt-prl-30 project-grid-items">
   <div class="row">      
      <div class="col-sm-12 {{ section.settings.align_text }}">
          <h2 class="section-title">{{ section.settings.title }}</h2> 
      </div>     
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
         <div class="col-12 col-sm-4">
           <div class="project-item" style="background-image:url('{{ block.settings.image | img_url:'grande' }}')">
              <a href="{{ block.settings.card_url }}">
              <div class="project-item-info">
              <h2>{{ block.settings.card_title }}</h2>
              {% if block.settings.card_text != blank %}
                <p>{{ block.settings.card_text }}</p>
              {% endif %}
              </div>
              </a>
            </div>          
         </div>
        {% endfor %}
      {% endif %} 
   </div>
</div>

<style>
  .project-item {
      width: 100%;
      border-radius: 15px;
      min-height: 500px;
      margin-bottom: 30px;
      background: no-repeat;
      background-size: cover;
      background-position: center;
      transition: 0.3s ease-in-out;
      border: 2px solid #e8e8e8;
  }
  .project-item:hover {
    opacity: 85%;
  }
  .project-item-info {
      padding: 40px;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0));
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: flex-end;
      border-radius: 13px;
  }
  .project-item-info h2, 
  .project-item-info h2 a, 
  .project-item-info p {
      color: #fff !important;
  }
</style>
