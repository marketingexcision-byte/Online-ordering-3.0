<ul class="pagination-custom">
  {% if paginate.previous %}
    <li>
      <a href="{{ request.path }}?page={{ paginate.previous.page }}" title="{{ paginate.previous.title }}">
        <i class="fa fa-angle-left"></i>
      </a>
    </li>
  {% else %}
    <li class="disabled">
      <span><i class="fa fa-angle-left"></i></span>
    </li>
  {% endif %}

  {% for part in paginate.parts %}
    {% if part.is_link %}
      <li>
        <a href="{{ request.path }}?page={{ part.title }}" title="Page {{ part.title }}">
          {{ part.title }}
        </a>
      </li>
    {% else %}
      {% if part.title == '...' %}
        <li class="disabled"><span>â€¦</span></li>
      {% elsif part.title == paginate.current_page %}
        <li class="active"><span>{{ part.title }}</span></li>
      {% else %}
        <li><span>{{ part.title }}</span></li>
      {% endif %}
    {% endif %}
  {% endfor %}

  {% if paginate.next %}
    <li>
      <a href="{{ request.path }}?page={{ paginate.next.page }}" title="{{ paginate.next.title }}">
        <i class="fa fa-angle-right"></i>
      </a>
    </li>
  {% else %}
    <li class="disabled">
      <span><i class="fa fa-angle-right"></i></span>
    </li>
  {% endif %}
</ul>